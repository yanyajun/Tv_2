<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/primary_class_layout"
    android:layout_width="@dimen/w_236"
    android:layout_height="@dimen/h_56">

    <Button
        android:id="@+id/primary_class_button"
        android:layout_width="@dimen/w_236"
        android:layout_height="@dimen/h_56"
        android:textColor="@color/nav_text_selected"
        android:textSize="@dimen/h_40"
        android:typeface="sans"
        android:focusable="true"
        android:textStyle="bold"
        android:focusableInTouchMode="true"
        android:background="@drawable/nav_selected"
        android:gravity="left"
        android:layout_gravity="center_vertical"/>

    <ImageView
        android:id="@+id/primary_class_image"
        android:layout_width="@dimen/w_44"
        android:layout_height="@dimen/h_44"
        android:background="@drawable/primary_one"
        android:layout_gravity="bottom"
        android:layout_marginLeft="@dimen/w_10"/>

</FrameLayout>
